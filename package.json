    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^3.1.2",
    "mongoose": "^6.0.9",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "react-spinners": "^0.11.0",
    "react-toastify": "^8.1.0",
    "semantic-ui-react": "^2.0.4"
  },
  "devDependencies": {
    "concurrently": "^6.4.0",
